@using MovieApp.Controllers;
@using MovieApp.ViewModels;
@model IEnumerable<Movie>
@{
    ViewData["Title"] = "";
}

<link href="~/css/all.css" rel="stylesheet" />
<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/js/jquery-3.3.1.slim.min.js"></script>
<script src="~/js/popper.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<style>
    h2, th, tr {
        color: white;
    }
</style>
<div class="container">
    <h2>Movie Table</h2><br />
    <a asp-controller="Home" asp-action="AddMovieView">
        <button type="button" class="btn btn-sm btn-danger d-none d-md-inline-block">
            Add Movie
        </button>
    </a>
    <br>
    <table class="table table-striped table-bordered col-md-12">
        <thead>
            
            <tr>
                <th>Movie Name</th>
                <th>Process</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {

                <tr>
                    <td>@movie.Title</td>

                    <td>
                        <form asp-action="Admin" asp-route-id="@movie.MovieId">
                            <button type="submit" class="btn btn-sm btn-danger d-none d-md-inline-block">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

